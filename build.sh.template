#     --apple-id "$APPLE_ID" \
#     --password "$APP_PASSWORD" \
#     --team-id "$TEAM_ID" \
#     --wait

# echo "ğŸ“¥ Stapling ticket to application..."
# xcrun stapler staple "./build/bin/$APP_NAME.app"

# echo "ğŸ“¦ Creating final distribution zip..."
