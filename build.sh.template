#!/bin/bash

# Your app details
APP_NAME="APP_NAME"
DEVELOPER_ID="ID" # Get this from Keychain Access
APPLE_ID="EMAIL"
TEAM_ID="TEAM_ID" # From Apple Developer Portal
APP_PASSWORD="PASSWORD"


echo "ğŸš€ Starting build process for $APP_NAME..."

# Clean up previous builds
echo "ğŸ§¹ Cleaning up previous builds..."
rm -rf "$APP_NAME.app" "$APP_NAME.zip" "$APP_NAME-final.zip" build/bin
go clean -cache -modcache

# Build the app
echo "ğŸ—ï¸ Building application..."
wails build -clean
if [ $? -ne 0 ]; then
    echo "âŒ Wails build failed"
    exit 1
fi

# Remove quarantine attributes
echo "ğŸ”’ Removing quarantine attributes..."
xattr -cr "./build/bin/$APP_NAME.app"

# Verify entitlements file exists
if [ ! -f "./build/darwin/entitlements.plist" ]; then
    echo "âŒ Entitlements file not found!"
    exit 1
fi

# Sign the app
echo "âœï¸ Signing application..."
codesign --timestamp \
         --options=runtime \
         --force \
         --deep \
         -o runtime \
         -s "$DEVELOPER_ID" \
         -v \
         --entitlements "./build/darwin/entitlements.plist" \
         "./build/bin/$APP_NAME.app"

# Verify signature
echo "ğŸ” Verifying code signature..."
codesign -vvv --deep --strict "./build/bin/$APP_NAME.app"
if [ $? -ne 0 ]; then
    echo "âŒ Code signing verification failed"
    exit 1
fi

# Create zip for notarization
echo "ğŸ“¦ Creating zip for notarization..."
ditto -c -k --keepParent "./build/bin/$APP_NAME.app" "$APP_NAME.zip"

